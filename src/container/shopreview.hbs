<main class="row">
    <div class="card m-3">
        <nav class="m-3">
            <div class="nav">
                {{#with navigation}}
                {{#each links}}
                <div class="nav-item">
                    <a href="#" class="nav-link {{#unless href}}disabled{{/unless}}">{{text}}</a>
                </div>
                {{/each}}
                {{/with}}
            </div>
        </nav>
    </div>

    <h1 class="row m-4">{{header}}</h1>

    <div class="col-8">
        {{#with formBlock}}
        <div class="form-block m-3">
            <h1 class="form-header">{{header}}</h1>
            <div class="rating mt-4">
                {{rating.title}}: {{rating.value}}
            </div>
            <div class="form-action-block mt-4">
                <div class="nav nav-tabs mb-5">
                    {{#each actionBlock.tabs}}
                    <div class="nav-item">
                        <a class="nav-link {{#if isActive}}active{{/if}}" href="#">{{text}}</a>
                    </div>
                    {{/each}}
                </div>

                <hr>

                <div class="card mt-5 mb-5">
                    <div class="report-block mt-3 mb-3 p-3">
                        <div class="report-title">{{actionBlock.report.title}}</div>
                        <a href="{{actionBlock.report.button.link}}"
                            class="btn btn-secondary">{{actionBlock.report.button.text}}</a>
                    </div>
                </div>
            </div>
            <div class=" mb-5">
                <div class="feedback-block">
                    <h2 class="feedback-title">{{feedbackBlock.title}}</h2>
                    <div class="feedback-buttons mt-5">
                        {{#each feedbackBlock.buttons}}
                        <a href="{{link}}"
                            class="btn {{#if isWarning}}btn-warning{{/if}}{{#if isSuccess}}btn-success{{/if}}{{#if isDanger}}btn-danger{{/if}}">{{text}}</a>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-4">

        <div class="col m-4" type="text-align: left;">
            <div class="goods-info">
                {{#with goodsInfo}}
                <div class="card m-3 p-4">
                    <img src="{{photo}}" alt="{{name}}">

                    <h3>{{name}}</h3>
                </div>
                <div class="card m-3 p-4">
                    <b>Ціна: {{price}}</b>
                    {{#if inMarket}}
                    <p>В наявності</p>
                    {{else}}
                    <p>Немає в наявності</p>
                    {{/if}}
                    <div class="">
                        <div class="buttons">
                            {{#each buttons}}
                            <button href="{{link}}" class="btn {{#if isPrimary}}btn-primary{{/if}}
                            {{#if isSecondary}}btn-secondary{{/if}} m-2">{{text}}</button>
                            {{/each}}
                        </div>
                    </div>
                </div>
                <div class="card m-3 p-4">
                    <div class="seller">
                        <p>{{seller.title}}: {{seller.value}}</p>
                    </div>
                </div>
                {{/with}}
            </div>
        </div>

    </div>
    {{/with}}

    <hr>

    {{#each reviewList}}
    <div class="card m-3">
        <div class="review">
            <div class="card m-3 p-4">
                <div class="review-title">
                    <h6>{{title.userName}}</h6>
                    <p>{{title.caption}}</p>
                    <p>{{title.date}}</p>
                </div>
                <div class="review-body">
                    <div class="seller">
                        <p>{{reviewBody.seller.title}}: {{reviewBody.seller.value}}</p>
                    </div>
                    <div class="rating">
                        <p>{{reviewBody.rating.title}}: {{reviewBody.rating.value}}</p>
                    </div>
                    {{#each reviewBody.text}}
                    <p>{{this}}</p>
                    {{/each}}
                    <div class="advantages">
                        <p>{{reviewBody.advantages.title}}: {{reviewBody.advantages.text}}</p>
                    </div>
                    <div class="disadvantages">
                        <p>{{reviewBody.disadvantages.title}}: {{reviewBody.disadvantages.text}}</p>
                    </div>
                    {{#each reviewBody.images}}
                    <img src="{{this}}" alt="Image">
                    {{/each}}
                </div>
            </div>
            <div class="comments">
                {{#each reviewBody.coments}}
                <div class="card m-5 p-4">
                    <div class="comment">
                        <h6>{{userName}}</h6>
                        <p>{{date}}</p>
                        <p>{{text}}</p>
                    </div>
                </div>
                {{/each}}
            </div>

        </div>
    </div>
    </div>
    {{/each}}

    <div class="card text-center text-bg-success m-3 p-5">
        <div class="service">
            <h2>{{service.title}}</h2>
            <p>{{service.description}}</p>
            {{#each service.buttons}}
            <a href="{{this.link}}" class="btn btn-primary">{{this.text}}</a>
            {{/each}}
        </div>
    </div>

    <hr>

    <div class="col-12">
        <footer>
            <div class="nav">
                {{#each footer}}
                <div class="nav-item">
                    {{#each this}}
                    <a href="{{link}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                    {{/each}}
                </div>
                {{/each}}
            </div>
        </footer>
    </div>

</main>