<main class="row">
    <div>
        <nav class="m-3">
            <div class="nav">
                {{#with navigation}}
                {{#each links}}
                <div class="nav-item">
                    <a href="#" class="nav-link {{#unless href}}disabled{{/unless}}">{{text}}</a>
                </div>
                {{/each}}
                {{/with}}
            </div>
        </nav>
    </div>

    <hr>

    <h1 class="row m-4">{{header}}</h1>

    <div class="col-8">
        <h2 class="row m-4">{{contacts_data.title}}</h2>
        <div class="col m-4" type="text-align: right;">
            {{#each contacts_data.buttons}}
            <button {{#if isPrimary}}class="btn btn-warning btn-block m-2" {{/if}}{{#if
                isOutline}}class="btn btn-outline-warning btn-block m-2" {{/if}}>{{text}}</button>
            {{/each}}
        </div>


        <div class="row m-4">
            {{#each contacts_data.form.input}}
            <div class="col-5">
                <form>
                    <label class="form-label">{{label}}</label>
                    <input type="text" class="form-control" placeholder="{{placeholder}}">
                    <p>{{caption}}</p>
                </form>
            </div>
            {{/each}}
        </div>

        <hr>

        <div class="row m-4 ">
            <div class="form-check form-switch">
                {{#each contacts_data.form.switch}}
                <div class="col-6">
                    <label class="form-check-label mb-4">{{text}}</label>
                    <input type="checkbox" class="form-check-input" {{#if isActive}}checked{{/if}}>
                </div>
                {{/each}}
            </div>
        </div>

        <hr>


        {{#with delivery}}
        <h4>{{title}}</h4>
        <div class="card my-4">
            <div class="row">
                {{#each select}}
                <div class="col-6">
                    <div class="mx-2">
                        {{label}}
                    </div>
                    <div class="Select fild p-2">
                        <select class="form-select" name="{{label}}" id="">
                            <option value="0">{{placeholder}}</option>
                            {{#each options}}
                            <option value="{{value}}">{{text}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

        <div>
            {{#each delivery_type}}
            <div class="form-check">
                <label class="form-check-label">{{type}}</label>
                <input class="form-check-input" name="delivery_type" type="radio">
            </div>
            {{/each}}
        </div>

        <hr>

        <div>
            <h4>{{payment.title}}</h4>
            {{#each payment.list}}
            <div class="form-check">
                <label class="form-check-label">{{type}}</label>
                <input class="form-check-input" name="payment_type" type="radio">
                {{#if description}}
                <p class="pt-3">{{description}}</p>
                {{/if}}
            </div>
            {{/each}}
        </div>

        <hr>

        <div class="row">
            {{#with contact}}
            <h1>{{title}}</h1>
            <div class="col-4">
                <label for="surname">{{surname.label}}</label>
                <input type="text" class="surname" name="surname" placeholder="{{surname.placeholder}}"
                    class="surnameCaption">
                <div class="surnameCaption">{{surname.caption}}</div>

                <label for="name">{{name.label}}</label>
                <input type="text" class="name" name="name" placeholder="{{name.placeholder}}" class="nameCaption">
                <div class="nameCaption">{{name.caption}}</div>
            </div>
            <div class="col-4">
                <label for="phone">{{phone.label}}</label>
                <input type="tel" class="phone" name="phone" placeholder="{{phone.placeholder}}" class="phoneCaption">
                <div class="phoneCaption">{{phone.caption}}</div>

                <label for="email">{{email.label}}</label>
                <input type="email" class="email" name="email" placeholder="{{email.placeholder}}" class="emailCaption">
                <div class="emailCaption">{{email.caption}}</div>
            </div>
            {{/with}}
        </div>

        <hr>

        <div class="col-12">
            {{#with coment}}
            <div class="col-12">
                <label class="form-label">{{label}}</label>
                <input class="form-control" placeholder="{{label}}" value="{{placeholder}}">
            </div>
            {{/with}}
        </div>

        <hr>
        {{/with}}
        <div>
            <h3>{{coupon.title}}</h3>
            <div>
                {{#with coupon.select}}
                <h6>{{availabel_coupon.label}}</h6>
                <select class="col-12  m-2 p-3">
                    <option value="">{{availabel_coupon.placeholder}}</option>
                    {{#each availabel_coupon.options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>

                <h6>{{friend_coupon.label}}</h6>
                <select class="col-12  m-2">
                    <option value="">{{friend_coupon.placeholder}}</option>
                    {{#each friend_coupon.options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
                {{/with}}

                {{#with coupon.add}}
                <h6>{{friend.label}}</h6>
                <input class="col-12 m-2 form-control" type="text" placeholder="{{friend.placeholder}}">
                <p>{{friend.caption}}</p>

                <h6>{{colleague.label}}</h6>
                <input class="col-12 m-2 form-control" type="text" placeholder="{{colleague.placeholder}}">
                <p>{{colleague.caption}}</p>
            </div>
            {{/with}}
        </div>

        <hr>

        <div>
            {{#with quiz}}
            <h3>{{title}}</h3>
            <p>{{preference.title}}</p>
            {{#each preference.options}}
            <div class="form-check">
                <label class="form-check-label">{{this}}</label>
                <input class="form-check-input" name="preference" type="radio">
            </div>
            {{/each}}

            <div class="row m-3">
                <label>{{your_expirience.label}}</label>
                <input type="text" placeholder="">
            </div>

            <div class="row m-3">
                <label>{{purchase_frequency.label}}</label>
                <select>
                    <option value="" disabled selected>{{purchase_frequency.placeholder}}</option>
                    {{#each purchase_frequency.options}}
                    <option value="{{this.value}}">{{this.text}}</option>
                    {{/each}}
                </select>
            </div>

            <div>
                <h3>{{factors.title}}</h3>

                {{#each factors.options}}
                <div class="form-check m-3">
                    <label class="form-check-label">{{this}}</label>
                    <input class="form-check-input" name="factors" type="checkbox">
                </div>
                {{/each}}

            </div>
            {{/with}}
        </div>

        <hr>

        <footer>
            <div class="nav">
                {{#each footer}}
                <div class="nav-item">
                    {{#each this}}
                    <a href="{{link}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                    {{/each}}
                </div>
                {{/each}}
            </div>
        </footer>

    </div>

    </div>
    <div class="col-4 p-5">
        <div class="card">
            <div class="col m-4" type="text-align: left;">
                {{#each action_block}}
                <button {{#if isSuccess}}class="btn btn-success btn-block m-2" {{/if}} {{#if
                    isDanger}}class="btn btn-danger btn-block m-2" {{/if}} {{#if
                    isInfo}}class="btn btn-info btn-block m-2{{/if}}">{{text}}</button>
                {{/each}}
            </div>
        </div>
    </div>


    <div class="card col-12 m-4">
        <div class="col m-2" type="text-align: left;">
            <h3>{{total.title}}</h3>
            <ul>
                {{#each total.item_list}}
                <p>{{name}} - {{price}}</p>
                {{/each}}
            </ul>
            <hr>
            <ul>
                {{#each total.additional_info}}
                <p>{{text}}: {{value}}</p>
                {{/each}}
            </ul>
            <hr>
            <div>{{total.total_price.text}}: {{total.total_price.value}}</div>
            <ul>
                {{#each total.button}}
                <button {{#if isPrimary}}class="btn btn-primary m-8 my-4" {{/if}}{{#if
                    isOutline}}class="btn btn-outline-primary" {{/if}}>{{text}}</button>
                {{/each}}
            </ul>
        </div>
    </div>

    </div>
</main>