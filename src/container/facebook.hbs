{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
    <div>
        <h1>{{ name }}</h1>

        {{#each users}}
        <h2>User: {{ name }}</h2>
        <p>Gender: {{ gender }}</p>
        <p>Age: {{ age }}</p>
        <h3>Friends:</h3>
        <ul>
            {{#each friends}}
            <li>
                {{ name }} ({{ gender }}, {{ age }})
                {{#if mutual_friends}}
                <ul>
                    {{#each mutual_friends}}
                    <li>{{ name }} ({{ gender }}, {{ age }})</li>
                    {{/each}}
                </ul>
                {{/if}}
            </li>
            {{/each}}
        </ul>

        {{#each groups}}
        <h3>Group Name: {{ name }}</h3>
        <p>Description: {{ description }}</p>
        <h4>Members:</h4>
        <ul>
            {{#each members}}
            <li>{{ name }} ({{ gender }}, {{ age }})</li>
            {{/each}}
        </ul>
        {{/each}}

        <h3>Friends:</h3>
        <ul>
            {{#each friends}}
            <li>
                {{ name }} ({{ gender }}, {{ age }})
                {{#if mutual_friends}}
                <ul>
                    {{#each mutual_friends}}
                    <li>{{ name }} ({{ gender }}, {{ age }})</li>
                    {{/each}}
                </ul>
                {{/if}}
                {{#if groups}}
                <h4>Groups:</h4>
                <ul>
                    {{#each groups}}
                    <li>
                        Group Name: {{ name }}
                        <p>Description: {{ description }}</p>
                        <h5>Members:</h5>
                        <ul>
                            {{#each members}}
                            <li>{{ name }} ({{ gender }}, {{ age }})</li>
                            {{/each}}
                        </ul>
                        {{#if mutual_friends}}
                        <h5>Mutual Friends:</h5>
                        <ul>
                            {{#each mutual_friends}}
                            <li>{{ name }} ({{ gender }}, {{ age }})</li>
                            {{/each}}
                        </ul>
                        {{/if}}
                    </li>
                    {{/each}}
                </ul>
                {{/if}}
            </li>
            {{/each}}
        </ul>

        <hr>
        {{/each}}
    </div>
</div>



