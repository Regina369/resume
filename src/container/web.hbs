{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
    {{#with web}}
    <h1>Web Technologies</h1>
    {{#each languages}}
    <div>
        <h2>{{name}} ({{version}})</h2>
        <p>{{description}}</p>
        {{#if elements}}
        <h3>Elements</h3>
        <ul>
            {{#each elements}}
            <li>
                <strong>{{name}}</strong>: {{description}}
                <ul>
                    {{#each attributes}}
                    <li>
                        <em>{{name}}</em>: {{description}}
                    </li>
                    {{/each}}
                </ul>
            </li>
            {{/each}}
        </ul>
        {{/if}}
        {{#if properties}}
        <h3>Properties</h3>
        <ul>
            {{#each properties}}
            <li>
                <strong>{{name}}</strong>: {{description}}
                <ul>
                    {{#each values}}
                    <li>
                        <em>{{value}}</em>: {{description}}
                    </li>
                    {{/each}}
                </ul>
            </li>
            {{/each}}
        </ul>
        {{/if}}
        {{#if functions}}
        <h3>Functions</h3>
        <ul>
            {{#each functions}}
            <li>
                <strong>{{name}}</strong>: {{description}}
                <ul>
                    {{#each parameters}}
                    <li>
                        <em>{{name}}</em> ({{type}}): {{description}}
                    </li>
                    {{/each}}
                </ul>
            </li>
            {{/each}}
        </ul>
        {{/if}}
    </div>
    {{/each}}
    {{/with}}

</div>

