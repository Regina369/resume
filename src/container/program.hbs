{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>

    <h1>{{program.excursion.name}}</h1>
    <p>Location: {{program.excursion.location.city}}, {{program.excursion.location.country}}</p>
    <p>Date: {{program.excursion.date}}</p>
    <h2>Program Details</h2>
    <ul>
        {{#each program.excursion.program}}
        <li>
            <h3>{{name}}</h3>
            <p>Type: {{type}}</p>
            <p>Duration: {{duration}} hours</p>
            <div>
                <h4>Details:</h4>
                {{#if details.museum}}
                <p>Museum Name: {{details.museum.name}}</p>
                <p>Museum Location: {{details.museum.location.city}}, {{details.museum.location.country}}</p>
                <h5>Exhibits:</h5>
                <ul>
                    {{#each details.museum.exhibits}}
                    <li>
                        <h6>{{name}}</h6>
                        <p>Artist: {{artist}}</p>
                        <p>Description: {{description}}</p>
                        <p>Audio Guide: {{audio_guide}}</p>
                    </li>
                    {{/each}}
                </ul>
                {{/if}}
                {{#if details.venue}}
                <p>Venue Name: {{details.venue.name}}</p>
                <p>Venue Location: {{details.venue.location.city}}, {{details.venue.location.country}}</p>
                <h5>Performers:</h5>
                <ul>
                    {{#each details.performers}}
                    <li>
                        <h6>{{name}}</h6>
                        <p>Type: {{type}}</p>
                    </li>
                    {{/each}}
                </ul>
                {{/if}}
                {{#if details.guide}}
                <h4>Guide:</h4>
                <p>Guide Name: {{details.guide.name}}</p>
                <p>Language: {{details.guide.language}}</p>
                <p>Rating: {{details.guide.rating}}</p>
                {{/if}}
            </div>
        </li>
        {{/each}}
    </ul>

</div>

